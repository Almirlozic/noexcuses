---
import Layout from "../layouts/Layout.astro";
import contact from "../assets/images/contact.jpg";
---

<Layout>
  <html lang="en">
    <head>
      <title>Contact</title>
      <meta charset="utf-8" />
    </head>
    <body>
      <section class="contact">
        <h1>GET IN TOUCH</h1>
        <p>Do you have any questions?<br />Do you want to collaborate on an event?<br />Interested in personal or company training?</p>
        <p>Fill out the form or reach out through our socials and we will contact you.</p>
        <form class="contact-form">
          <label>
            <input type="text" placeholder="Your name" />
          </label>

          <label>
            <input type="email" placeholder="Your e-mail" />
          </label>

          <label>
            <textarea placeholder="Your message"></textarea>
          </label>

          <button type="submit" class="btn-submit">SUBMIT</button>
        </form>
        <img class="contact-image" src={contact.src} alt="people running" />
      </section>
    </body>
  </html>
</Layout>

<style>
  .contact {
    padding: 2rem 3rem;
    background: #f8f3ea;
    color: #333;
  }

  p {
    font-size: 12px;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  /* Form */
  .contact-form label {
    display: block;
    margin-bottom: 1.2rem;
  }

  .contact-form span {
    font-size: 0.8rem;
    display: block;
    margin-bottom: 0.3rem;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    border: 1px solid #555;
    padding: 0.8rem;
    font-size: 1rem;
    background: white;
  }

  textarea {
    height: 120px;
  }

  .btn-submit {
    width: 100%;
    padding: 1rem;
    background: #e76f32;
    border: none;
    color: white;
    font-weight: bold;
    margin-top: 1rem;
  }

  /* Image */
  .contact-image {
    width: 100%;
    margin: 2rem 0;
    display: block;
    border-radius: 4px;
  }

  /* Tablet & up */
  @media (min-width: 768px) {
    .contact {
      width: 70%;
      margin: 0 auto;
    }

    .btn-submit {
      width: 200px;
      margin: 1rem auto;
      display: block;
    }

    .contact-image {
      width: 60%;
      margin: 2rem auto;
    }

    .footer {
      padding: 2rem 0;
    }
  }
</style>
