---
import Layout from "../layouts/Layout.astro";
import SignUp from "../components/SignUp.astro";
import Goodcause1 from "../assets/images/goodcause1.jpg";
import Goodcause3 from "../assets/images/goodcause3.jpg";
import Goodcause2 from "../assets/images/goodcause2.jpg";
import Goodcause4 from "../assets/images/goodcause4.jpg";
import Goodcause from "../assets/images/goodcause.jpg";
---

<Layout>
  <section>
    <SignUp />
  </section>
  <section class="hero">
    <img class="Goodcause1" src={Goodcause1.src} alt="goodcause1" />
    <div class="hero-text">
      <h1>A GOOD CAUSE</h1>
      <em><p>Together, we make impact</p></em>
    </div>
  </section>
  <section class="body">
    <section class="info">
      <div class="info-text">
        <h2>WHAT IS “A GOOD CAUSE”?</h2>
        <p>
          NO.EXCUSES hosts/co-hosts one big charity workout every year. We
          gather the entire community — athletes, families, partners and
          companies — for a day of movement, positivity and impact. Every penny
          raised goes to a chosen Danish charity.
        </p>
        <h2>WHY WE DO IT?</h2>
        <p>
          Because fitness is more than exercise. It’s about showing up — for
          yourself, and for each other. At NO.EXCUSES we believe that movement
          creates connection, confidence and responsibility.
        </p>
      </div>
      <div>
        <img class="Goodcause3" src={Goodcause3.src} alt="goodcause3" />
      </div>
    </section>
    <div class="funds-raised">
      <h3>Funds Raised This Year</h3>
      <p id="count-up" data-target="173762">0 KR.</p>
      <p>
        We walked 120 km on the Camino to raise funds for BørneTelefonen - and
        thanks to your support, we collected an amazing 173,762 DKK. Every step
        helped support children and young people in need.
      </p>
      <a class="button" href="">
        <button>JOIN US NEXT TIME</button>
      </a>
    </div>
    <section class="galleri">
      <img src={Goodcause2.src} alt="goodcause2" />
      <img src={Goodcause.src} alt="goodcause" />
      <img src={Goodcause4.src} alt="goodcause4" />
    </section>
  </section>
</Layout>

<style>
  .hero {
    position: relative;
    overflow: hidden;
  }

  .hero img {
    height: 100%;
    object-fit: cover;
    filter: brightness(0.5);
  }

  .hero-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: var(--offwhite-color);
  }

  .hero-text p {
    margin: 8px 0 0;
    text-align: center;
  }

  img {
    width: 100%;
  }

  .info {
    padding: 30px;
  }

  .info-text {
    line-height: 1.5;
  }

  .funds-raised {
    background: var(--beige-color);
    padding: 40px 20px;
    text-align: center;
    margin: 20px;
  }

  .funds-raised h3 {
    font-size: 22px;
    margin-bottom: 10px;
  }

  #count-up {
    font-size: 48px;
    font-weight: bold;
    color: var(--orange-color);
    margin: 20px 0;
  }

  button {
    background-color: var(--darkgrey-color);
    color: var(--offwhite-color);
    border: none;
    padding: 20px 60px;
    margin-top: 30px;
    margin-bottom: 10px;
  }

  button:hover {
    background-color: var(--orange-color);
    color: var(--offwhite-color);
  }

  .galleri {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin: 20px;
  }

  .galleri img {
    width: 100%;
    object-fit: cover;
    object-position: center;
  }
  .galleri :nth-child(1) {
    height: 300px;
  }
  .galleri :nth-child(2) {
    height: 300px;
  }
  .galleri :nth-child(3) {
    grid-column: span 2;
  }

  @media (min-width: 850px) {
    .body {
      max-width: 1100px;
      margin: auto;
    }
    .hero {
      width: 100%;
      overflow: hidden;
    }
    .hero-text {
      position: absolute;
      top: 45%;
      left: 40%;
      transform: translateY(-50%);
    }

    .hero-text h1 {
      font-size: 2.8rem;
      margin: 0;
    }

    .hero-text p {
      margin: 25px;
      align-items: center;
    }

    .info {
      display: grid;
      grid-template-columns: 1fr 1fr;
      max-width: 1100px;
      gap: 3em;
      padding: 0;
      margin-top: 20px;
      margin-bottom: 20px;
    }

    .info-text {
      margin-top: 20px;
      margin-left: 0;
      padding-left: 0;
    }

    .Goodcause3 {
      max-height: fit-content;
      object-fit: fill;
    }
    #count-up {
      margin: auto;
    }

    .funds-raised {
      padding: 40px;
      margin: auto;
      margin-bottom: 30px;
    }

    .funds-raised p {
      padding: 10px;
      line-height: 1.5;
      padding-bottom: 30px;
      margin: auto;
      max-width: 500px;
    }

    .galleri {
      display: grid;
      grid-template-columns: 1fr 2fr 1fr;
      max-width: fit-content;
      margin: auto;
    }
    .galleri :nth-child(1) {
      height: 300px;
    }
    .galleri :nth-child(2) {
      height: 300px;
    }

    .galleri img {
      width: fit-content;
      height: 300px;
      object-fit: contain;
    }

    .galleri :nth-child(3) {
      grid-column: 2 / 3;
      grid-row: 1;
    }
    .body,
    .funds-raised {
      margin-top: 70px;
      margin-bottom: 70px;
    }
  }
</style>
<script>
  const counter = document.getElementById("count-up");
  const target = parseInt(counter.dataset.target);

  function animateCount() {
    let current = 0;
    const duration = 4000; // 4 sekunder
    const increment = target / (duration / 16);

    const update = () => {
      current += increment;

      if (current < target) {
        counter.textContent =
          Math.floor(current).toLocaleString("da-DK") + " KR.";
        requestAnimationFrame(update);
      } else {
        counter.textContent = target.toLocaleString("da-DK") + " KR.";
      }
    };

    update();
  }

  const observer = new IntersectionObserver(
    (entries) => {
      if (entries[0].isIntersecting) {
        animateCount();
        observer.disconnect();
      }
    },
    { threshold: 0.4 }
  );

  observer.observe(counter);
</script>
