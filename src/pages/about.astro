---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import image1 from "../assets/images/about2.jpg";
import image2 from "../assets/images/about.jpg";
import image3 from "../assets/images/about1.jpg";
import image4 from "../assets/images/about3.jpg";
---

<Layout>
  <section class="about">
    <h1>About</h1>
    <Image src={image1} alt="" />
  </section>
  <section class="faq"></section>
  <section class="flex">
    <h2>MEET THE TEAM</h2>
    <div class="team-container">
      <div class="team-member">
        <Image src={image2} alt="coach k" />
        <div class="text-overlay">
          <p>FOUNDER AND COACH</p>
          <p>COACH K</p>
        </div>
      </div>
      <div class="team-member">
        <Image src={image3} alt="coach k" />
        <div class="text-overlay">
          <p>AMALIE “A”</p>
        </div>
      </div>
      <div class="team-member">
        <Image src={image4} alt="coach k" />
        <div class="text-overlay">
          <p>COACH</p>
          <p>LEO</p>
        </div>
      </div>
    </div>
  </section>

  <style>
    img {
      width: 100%;
      height: auto;
    }

    .about {
      padding: 20px;
    }

    h2 {
      text-align: center;
      border-bottom: 1px solid var(--darkgrey-color);
    }

    .flex {
      background-color: var(--beige-color);
      padding: 20px;
      margin: 20px;
    }
    .flex img {
      margin-bottom: 100px;
    }

    .team-member {
      position: relative;
      display: inline-block;
    }

    .text-overlay {
      position: absolute;
      bottom: 100px;
      left: 10px;
      color: var(--offwhite-color);
    }
  </style>
</Layout>
