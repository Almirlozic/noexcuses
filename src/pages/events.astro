---
import Layout from "../layouts/Layout.astro";
import SignUp from "../components/SignUp.astro";
import event1 from "../assets/images/7days.png";
import event2 from "../assets/images/juli.png";
import event3 from "../assets/images/portugal-retreat.png";
import event4 from "../assets/images/nusa.png";
---

<Layout>
  <main>
    <section>
      <SignUp />
    </section>
    <h1>UPCOMING EVENTS</h1>
    <div class="event-cards">
      <div class="event-wrapper">
        <input type="checkbox" class="toggle" id="event1-toggle" />
        <label for="event1-toggle">
          <img class="new-event" src={event1.src} alt="7 DAYS ACTIVE collab" />
          <div class="event-overlay"></div>
          <a href="/signup">
            <button>READ MORE</button>
          </a>
        </label>
      </div>
      <div class="event-wrapper">
        <input type="checkbox" class="toggle" id="event2-toggle" />
        <label for="event2-toggle">
          <img class="new-event" src={event2.src} alt="JULI PIZZA collab" />
          <div class="event-overlay"></div>
          <a href="/signup">
            <button>READ MORE</button>
          </a>
        </label>
      </div>
    </div>
    <h1>PREVIOUS EVENTS</h1>
    <div class="event-cards">
      <div class="event-card3">
        <img src={event3.src} alt="Portugal training-trip" />
      </div>
      <div class="event-card4">
        <img src={event4.src} alt="NUSA PLANET collab" />
      </div>
    </div>
  </main>
</Layout>

<style>
  .main {
    max-width: 430px;
    margin: 0 auto;
  }

  img {
    display: block;
    width: 100%;
    height: auto;
  }

  h1 {
    padding: 1rem;
  }

  .event-wrapper {
    position: relative;
    width: 100%;
    display: inline-block;
  }
  .event-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    filter: brightness(-100%%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  button {
    margin-top: 1rem;
    background-color: var(--orange-color);
    color: var(--offwhite-color);
    font-size: 14px;
    border: none;
    padding: 1rem 2rem;
    cursor: pointer;
    transition: all 0.2s ease;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0;
    pointer-events: none;
  }

  button:hover {
    color: var(--darkgrey-color);
    background-color: var(--offwhite-color);
  }

  .toggle {
    display: none;
  }

  .toggle:checked + label .event-overlay {
    opacity: 1;
  }

  .toggle:checked + label button {
    opacity: 1;
    pointer-events: auto;
  }

  .event-card3,
  .event-card4 {
    filter: grayscale(100%);
  }

  .event-card3:hover {
    filter: grayscale(0%);
  }

  .event-card4:hover {
    filter: grayscale(0%);
  }

  .new-event,
  .event-card3,
  .event-card4 {
    border: 3px solid var(--darkgrey-color);
  }

  @media (min-width: 768px) {
    .event-wrapper:hover .event-overlay {
      opacity: 1;
    }

    .event-wrapper:hover button {
      opacity: 1;
      pointer-events: auto;
    }

    .event-cards {
      display: flex;
      flex-direction: row;
    }

    button {
      padding: 1.5rem 3rem;
      font-size: 20px;
    }

    h1 {
      padding-top: 3rem;
    }
  }
</style>
