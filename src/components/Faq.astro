---
import "../css/global.css";
const { text1, text2, text3, text4, text5 } = Astro.props;
const { p1, p2, p3, p4, p5 } = Astro.props;
---

<section class="faq">
  <h3 class="accordion">{text1}</h3>
  <div class="panel">
    <p>{p1}</p>
  </div>

  <h3 class="accordion">{text2}</h3>
  <div class="panel">
    <p>{p2}</p>
  </div>

  <h3 class="accordion">{text3}</h3>
  <div class="panel">
    <p>{p3}</p>
  </div>

  <h3 class="accordion">{text4}</h3>
  <div class="panel">
    <p>{p4}</p>
  </div>

  <h3 class="accordion">{text5}</h3>
  <div class="panel">
    <p>{p5}</p>
  </div>
</section>

<style>
  * {
    box-sizing: border-box;
  }
  html,
  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }
  .faq {
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
  }
  .accordion {
    background-color: transparent;
    color: #444;
    cursor: pointer;
    padding: 10px 10px; /* only vertical padding */
    width: 100%;
    text-align: left;
    border: none;
    outline: none;
    transition: 0.4s;
  }

  /* Add a background color to the button if it is clicked on (add the .active class with JS), and when you move the mouse over it (hover) */
  .active,
  .accordion:hover {
    background-color: transparent;
    color: #ff712a;
    cursor: pointer;
  }

  .accordion:after {
    content: "\02795";
    float: right;
  }

  .active:after {
    content: "\2796";
  }
  .panel {
    width: 100%;
    padding: 0 15px; /* only horizontal padding */
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.2s ease-out;
    border-bottom: 2px solid black;
  }
  .panel p {
    word-wrap: break-word;
    overflow-wrap: break-word;
    max-width: 350px;
  }
</style>

<script>
  var acc = document.getElementsByClassName("accordion");
  var i;

  for (i = 0; i < acc.length; i++) {
    acc[i].addEventListener("click", function () {
      this.classList.toggle("active");
      var panel = this.nextElementSibling;
      if (panel.style.maxHeight) {
        panel.style.maxHeight = null;
      } else {
        panel.style.maxHeight = panel.scrollHeight + "px";
      }
    });
  }
</script>
