---
const { data } = Astro.props;

const image1 = data.image1.trim();
const image2 = data.image2.trim();
const isSoldOut = data.sold_out === true || data.sold_out === "true";
---

<a
  href={data.sold_out ? undefined : `/product/${data.id}`}
  class={data.sold_out ? "sold-out-link" : ""}
>
  <section class="grid">
    <div class="card">
      <div class="image-wrapper">
        <img
          class={`main ${isSoldOut ? "sold-out-img" : ""}`}
          src={`https://yiiqdouriasazhyrfuzt.supabase.co/storage/v1/object/public/merch/${image1}`}
          alt={data.title}
        />
        <img
          class={`hover ${isSoldOut ? "sold-out-img" : ""}`}
          src={`https://yiiqdouriasazhyrfuzt.supabase.co/storage/v1/object/public/merch/${image2}`}
          alt={data.title}
        />
        {isSoldOut && <div class="sold-out">SOLD OUT</div>}
      </div>

      <h4>{data.title}</h4>
      <p class="color">{data.color}</p>
      <p>{data.price}</p>
      <button disabled={isSoldOut}>PURCHASE</button>
    </div>
  </section>
</a>

<style>
  a {
    text-decoration: none;
    color: #353535;
  }
  .card {
    border: 1px solid #353535;
    width: 100%;
    max-width: 350px;
  }

  .image-wrapper {
    position: relative;
    width: 100%;
    padding-top: 125%;
    overflow: hidden;
  }

  .image-wrapper img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: opacity 0.5s ease;
  }

  .image-wrapper img.main {
    z-index: 2;
    opacity: 1;
  }

  .image-wrapper img.hover {
    z-index: 1;
    opacity: 0;
  }

  .image-wrapper:hover img.main {
    opacity: 0;
  }

  .image-wrapper:hover img.hover {
    opacity: 1;
  }

  .sold-out {
    position: absolute;
    top: 10px;
    left: 250px;
    background-color: #fdf8ee;
    color: #353535;
    font-weight: bold;
    padding: 10px 10px;
    z-index: 3;
    font-size: 0.8rem;
  }

  h4,
  p {
    padding: 0 10px;
  }

  .color {
    opacity: 50%;
    margin-top: -15px;
  }

  button {
    background-color: #353535;
    color: #fdf8ee;
    border: none;
    padding: 10px 25px;
    margin: 10px;
    cursor: pointer;
  }

  button:hover:not(:disabled) {
    background-color: #ff712a;
  }
  .sold-out-img {
    filter: brightness(50%);
  }

  button:disabled {
    opacity: 0.5;
  }
</style>
